<% if user_signed_in? %>
  <h1>You are logged in!</h1>
  <%= link_to 'Log out', destroy_user_session_path, data: { turbo_method: :delete }, class: 'btn btn-primary btn-lg' %>
  <%= form_with model: Tweet.new, url: tweets_path, method: :post, local: true do |f| %>
    <div class="my-3">
      <%= f.text_field :body, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= f.submit %> 
    </div>
  <% end %>

  <ul>
    <% Tweet.find_each do |tweet| %>
      <li>
        <%= tweet.body %>
      </li>
    <% end %>
  </ul>
<% else %>
  <h1>Hello world</h1>
  <%= link_to 'Sign up', new_user_registration_path, class: 'btn btn-primary btn-large' %>
  <%= link_to 'Log in', new_user_session_path, class: 'btn btn-outline-primary btn-large' %>
<% end %>
